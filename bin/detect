#!/usr/bin/env bash
set -eo pipefail

# CNB detect script
# $1: platform directory
# $2: plan path

BUILD_DIR=$1
PLAN_PATH=$2

# Check if this is a DreamFactory app
if [ -f "$BUILD_DIR/composer.json" ] && grep -q "dreamfactory" "$BUILD_DIR/composer.json"; then
    echo "DreamFactory application detected"
    cat > "$PLAN_PATH" << EOF
[[provides]]
name = "dreamfactory"

[[requires]]
name = "php"

[[requires]]
name = "composer"

[[requires]]
name = "nginx"
EOF
    exit 0
fi

# Also check app.json
if [ -f "$BUILD_DIR/app.json" ] && grep -q "dreamfactory" "$BUILD_DIR/app.json"; then
    echo "DreamFactory application detected via app.json"
    cat > "$PLAN_PATH" << EOF
[[provides]]
name = "dreamfactory"

[[requires]]
name = "php"

[[requires]]
name = "composer"

[[requires]]
name = "nginx"
EOF
    exit 0
fi

# Also allow manually adding a file to identify as a DreamFactory app
if [ -f "$BUILD_DIR/.is-dreamfactory" ]; then
    echo "DreamFactory application detected via .is-dreamfactory marker"
    cat > "$PLAN_PATH" << EOF
[[provides]]
name = "dreamfactory"

[[requires]]
name = "php"

[[requires]]
name = "composer"

[[requires]]
name = "nginx"
EOF
    exit 0
fi

exit 1